<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_event_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <ScrollView
        android:id="@+id/edit_view"
        android:layout_width="fill_parent"
        android:layout_height="111dip"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/answer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="71dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:background="#00000000"
            android:hint="@string/schdule_event_content_hit"
            android:textColorHint="#60000000"
            android:gravity="top|left"
            android:textColor="#60000000"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            android:textSize="16dp" />
    </ScrollView>

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_below="@+id/edit_view"
        android:background="#f2f2f2">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timelayer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/line1"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/timeimg"
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/rtime"/>

        <TextView
            android:id="@+id/time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/timeimg"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:textColor="#60000000"
            android:text="@string/title_time"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/time_title"
            android:layout_toLeftOf="@+id/array2"
            android:layout_marginLeft="46dp"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#60000000"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/array2"
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:src="@drawable/skip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="#f2f2f2">

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remindlayer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/timelayer"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/remindimg"
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/remind"/>

        <TextView
            android:id="@+id/remind_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/remindimg"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:textColor="#60000000"
            android:text="@string/title_remind"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/remind_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/remind_title"
            android:layout_marginLeft="46dp"
            android:layout_toLeftOf="@+id/array1"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#60000000"
            android:text=""
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/array1"
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:src="@drawable/skip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="#f2f2f2">

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>