<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <intersky.mywidget.PoorPriorityScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="52dp"
        android:background="#f2f2f2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f2">

            <RelativeLayout
                android:id="@+id/leavetype"
                android:layout_width="match_parent"
                android:layout_height="54dip"
                android:layout_alignParentTop="true"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/leavetypetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text="请假类型"
                    android:textColor="#9a9ca3"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/leavetypename"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="34dp"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text=""
                    android:textColor="#ceced3"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin1"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/leavetype"
                android:background="#ffffff"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/leavebegin"
                android:layout_width="match_parent"
                android:layout_height="54dip"
                android:layout_below="@+id/lin1"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/leavebegintitle"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text="开始时间"
                    android:textColor="#9a9ca3"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/leavebeginname"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="34dp"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:textIsSelectable="true"
                    android:gravity="center_vertical|left"
                    android:text=""
                    android:textColor="#ceced3"
                    android:textSize="16dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lin2"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/leavebegin"
                android:background="#ffffff"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/leaveend"
                android:layout_width="match_parent"
                android:layout_height="54dip"
                android:layout_below="@+id/lin2"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/leaveendtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text="结束时间"
                    android:textColor="#9a9ca3"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/leaveendname"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="34dp"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:textIsSelectable="true"
                    android:gravity="center_vertical|left"
                    android:text=""
                    android:textColor="#ceced3"
                    android:textSize="16dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lin3"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/leaveend"
                android:background="#ffffff"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/leaveday"
                android:layout_width="match_parent"
                android:layout_height="54dip"
                android:layout_below="@+id/lin3"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/leavedaytitle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text="请假天数"
                    android:textColor="#9a9ca3"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/leavedayname"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/leavedaytitle"
                    android:background="#00000000"
                    android:ellipsize="end"
                    android:textIsSelectable="true"
                    android:gravity="center_vertical|left"
                    android:inputType="number"
                    android:textColor="#9a9ca3"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin4"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/leaveday"
                android:background="#ffffff"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="76dp"
                android:layout_below="@+id/lin4"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content1title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text="请假事由"
                    android:textColor="#9a9ca3"
                    android:textSize="16dp" />


                <intersky.mywidget.WebEdit
                    android:id="@+id/content1text"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/content1title"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/content5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content1"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/image_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"></LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin6"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/content5"
                android:background="#ffffff"></RelativeLayout>

            <LinearLayout
                android:id="@+id/sendayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin6"
                android:background="#00000000"
                android:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ccayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sendayer"
                android:background="#ffffff"
                android:layout_marginTop="7dp"
                android:minHeight="75dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cctitle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="13dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text="@string/workreport_ccto"
                    android:textColor="#000000"
                    android:textSize="15dp" />


                <intersky.mywidget.MyLinearLayout
                    android:id="@+id/copyer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cctitle"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="5dp"></intersky.mywidget.MyLinearLayout>

            </RelativeLayout>



            <ImageView
                android:id="@+id/state_img"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:layout_marginRight="27dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="27dp"
                android:background="#00000000" />
        </RelativeLayout>
    </intersky.mywidget.PoorPriorityScrollView>

    <RelativeLayout
        android:id="@+id/buttom_layer"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="#ffffff">

        <TextView
            android:id="@+id/btnleft"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_toLeftOf="@+id/mid"
            android:ellipsize="end"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/button_word_accept"
            android:textColor="#4884be"
            android:textSize="19dp" />


        <RelativeLayout
            android:id="@+id/mid"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#d7d7d7"
            android:orientation="vertical"></RelativeLayout>

        <TextView
            android:id="@+id/btnright"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_toRightOf="@+id/mid"
            android:ellipsize="end"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/button_word_refouse"
            android:textColor="#E5756A"
            android:textSize="19dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77000000"
        android:visibility="invisible"></RelativeLayout>
</RelativeLayout>
