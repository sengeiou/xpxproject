<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/contentlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/shape_bg_tasklist_item">


        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:text="sfdasfsa"
            android:textColor="#8ec6ff"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/conversation_dete"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/conversation_title"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical|left"
            android:text="2016/12/18"
            android:textColor="#c7c7c7"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/conversation_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_dete"
            android:minHeight="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:gravity="top|left"
            android:text="99sasdfa"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:textSize="15dp" />


    </RelativeLayout>

</RelativeLayout>