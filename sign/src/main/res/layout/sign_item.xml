<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_person_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dip"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="24dp" />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="28dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/item_time"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/nomal_edit_size" />

        <LinearLayout
            android:layout_toRightOf="@+id/item_time"
            android:layout_marginLeft="8dip"
            android:layout_below="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remark_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:minHeight="25dp"
                android:textColor="#dbdbdb"
                android:textSize="@dimen/report_edit_size" />


            <LinearLayout
                android:id="@+id/image_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/showmore"
                android:background="#ffffff"></LinearLayout>

            <TextView
                android:id="@+id/reason_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/item_time"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="#dbdbdb"
                android:textSize="@dimen/report_edit_size" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/item_time"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:minHeight="25dp"
                android:textColor="#73b3e9"
                android:textSize="@dimen/report_edit_size" />

            <RelativeLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/item_time"
                android:background="#ececec"></RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>