<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    >


    <RelativeLayout
        android:id="@+id/conversationlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="67dp"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <ImageView
            android:id="@+id/close_image"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/circle_close" />

        <TextView
            android:id="@+id/conversation_img"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:textSize="20dip"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/shape_bg_cycle"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/conversation_title"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/conversation_img"
            android:layout_toLeftOf="@+id/conversation_time"
            android:layout_marginTop="10.0dip"
            android:layout_marginLeft="15dip"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="#39afcd"
            android:text=""
            android:textSize="16dp" />

        <TextView
            android:id="@+id/conversation_time"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="15dip"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textColor="#000000"
            android:text="safsafsafd"
            android:textSize="14dp" />

        <intersky.mywidget.GifTextView
            android:id="@+id/conversation_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/conversation_title"
            android:layout_toRightOf="@+id/conversation_img"
            android:layout_marginLeft="15dip"
            android:textIsSelectable="true"
            android:minHeight="20dp"
            android:layout_marginTop="0dp"
            android:text="asdjfasjdflsaasjflsadjf"
            android:ellipsize="end"
            android:textColor="#000000"
            android:layout_marginBottom="3dp"
            android:textSize="14dp" />


        <RelativeLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="#f2f2f2"></RelativeLayout>

    </RelativeLayout>


</RelativeLayout >