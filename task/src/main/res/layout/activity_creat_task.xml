<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:background="@color/whiteex">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/task_creat_name"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/nomal_edit_size" />

                <EditText
                    android:id="@+id/name_value"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/name_title"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:hint="@string/task_creat_name"
                    android:maxLines="1"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/style_divider_color"
                    android:textSize="@dimen/nomal_edit_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/style_divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/project"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/project_title"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/task_creat_project"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/nomal_edit_size" />

                <TextView
                    android:id="@+id/project_value"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/project_array"
                    android:layout_toRightOf="@+id/project_title"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/style_divider_color"
                    android:textSize="@dimen/nomal_edit_size" />

                <ImageView
                    android:id="@+id/project_array"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arraw" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/style_divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/stage_title"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/task_creat_stage"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/nomal_edit_size" />

                <TextView
                    android:id="@+id/stage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/stage_array"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/style_divider_color"
                    android:textSize="@dimen/nomal_edit_size" />

                <ImageView
                    android:id="@+id/stage_array"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arraw" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/style_divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/durty"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/durty_title"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/task_creat_durty"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/nomal_edit_size" />


                <TextView
                    android:id="@+id/durty_value"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/durty_array"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/style_divider_color"
                    android:textSize="@dimen/nomal_edit_size" />

                <ImageView
                    android:id="@+id/durty_array"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arraw" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/style_divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/datestart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/datestart_title"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/task_creat_date_start"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/nomal_edit_size" />


                <TextView
                    android:id="@+id/datestart_value"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/datestart_array"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/style_divider_color"
                    android:textSize="@dimen/nomal_edit_size" />

                <ImageView
                    android:id="@+id/datestart_array"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arraw" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/style_divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dateend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/dateend_title"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/task_creat_date_end"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/nomal_edit_size" />

                <TextView
                    android:id="@+id/dateend_value"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/dateend_array"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/style_divider_color"
                    android:textSize="@dimen/nomal_edit_size" />

                <ImageView
                    android:id="@+id/dateend_array"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arraw" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/style_divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="115dp">

                <TextView
                    android:id="@+id/desc_title"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/task_creat_desc"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/nomal_edit_size" />

                <EditText
                    android:id="@+id/desc_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/desc_title"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:hint="@string/task_creat_desc"
                    android:minHeight="50dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/style_divider_color"
                    android:textSize="@dimen/nomal_edit_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content1"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/image_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contentlayer"
                    android:background="#ffffff"
                    android:orientation="vertical"></LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ccayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin7"
                android:background="#ffffff"
                android:minHeight="75dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cctitle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="13dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text="@string/task_creat_person"
                    android:textColor="#000000"
                    android:textSize="@dimen/report_edit_size" />
                <TextView
                    android:id="@+id/cctitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cctitle"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:text="@string/xml_workreport_deletehead"
                    android:textColor="#dfdfe1"
                    android:textSize="15dp" />
                <intersky.mywidget.MyLinearLayout
                    android:id="@+id/copyer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cctitle"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="5dp"></intersky.mywidget.MyLinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/edit_mail_buttom_layer_select"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/buttom_takephoto"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/takephoto_img2"
                android:layout_width="42dip"
                android:layout_height="29dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/takephoto2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttom_picture"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/picture_img"
                android:layout_width="42dip"
                android:layout_height="29dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/picture" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
