<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/task_glass_ico"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/textcolor2"
            android:text="@string/project_add_auth"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text1"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/serverhead"
            android:text="@string/project_add_auth_detial"
            />

        <TextView
            android:id="@+id/addbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text2"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/navBarBkColor"
            android:text="@string/project_add"
            />
    </RelativeLayout>
</RelativeLayout>