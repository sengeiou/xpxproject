<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mial_item"
    android:layout_width="match_parent"
    android:layout_height="90dip"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/headlayer"
        android:layout_width="50dip"
        android:layout_height="90dip"
        android:layout_marginLeft="5dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/head"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:textSize="20dip"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/shape_bg_cycle"
            android:textColor="#4f5a76"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contentlayer"
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:layout_toRightOf="@+id/headlayer"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/arraw"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="14dip"
            android:src="@drawable/arraw" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dip"
            android:layout_toLeftOf="@+id/arraw"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="#c5c5c5"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/username_text"
            android:layout_width="170dip"
            android:layout_height="20dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:textStyle="bold"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/fujianicon"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dip"
            android:layout_toLeftOf="@+id/date_text"
            android:layout_marginRight="2dp"
            android:src="@drawable/attachment" />

        <ImageView
            android:id="@+id/fujianicon2"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dip"
            android:layout_toLeftOf="@+id/fujianicon"
            android:layout_marginRight="2dp"
            android:src="@drawable/no_reply" />

        <TextView
            android:id="@+id/mialname_text"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_below="@+id/username_text"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="#020202"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/mialcontent_text"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_below="@+id/mialname_text"
            android:ellipsize="end"
            android:gravity="top|left"
            android:maxLines="2"
            android:textColor="#c5c5c5"
            android:textSize="13dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/contentlayer"
        android:background="#c8c7cc" >
    </RelativeLayout>

</RelativeLayout>